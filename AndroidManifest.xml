<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bingghost.simpletetris"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GameActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.MenuActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.AStarActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.ConfigActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.SaveScore"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bingghost.simpletetris.activity.ScoreList"
            android:label="@string/title_activity_score_list"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>